---
const { imageUrl, title } = Astro.props
---

<div class='max-w-[450px] w-fit h-full rounded overflow-hidden shadow-lg bg-white'>
  <!-- Imagen del proyecto -->
  <div class='relative'>
    <img src={imageUrl} alt={title} class='w-full h-48 object-cover' />
    <!-- <span
      class='absolute top-2 right-2 bg-orange-500 text-white text-xs font-bold px-2 py-1 rounded'>
      {status}
    </span> -->
  </div>
  <!-- Detalles del proyecto -->
  <div class='px-6 py-4 bg-blue-100 h-full w-'>
    <h3 class='text-lg font-bold text-blue-900 mb-4'>
      {title}
    </h3>
  </div>
</div>
